<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.graduatestudent.mapper.UserInformationMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.graduatestudent.entity.UserInformation">
        <id column="id" property="id" />
        <result column="password" property="password" />
        <result column="email" property="email" />
        <result column="telephone_number" property="telephoneNumber" />
        <result column="head_picture" property="headPicture" />
        <result column="nickname" property="nickname" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, password, email, telephone_number, head_picture, nickname
    </sql>
    <select id="selectOneByEmail" resultType="com.example.graduatestudent.entity.UserInformation">
        select * from user_information
        where email = #{email}
    </select>

</mapper>
